@{
    ViewData["Title"] = "Careers";
}

<div class="container mt-5 mb-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h2 class="fw-bold">Careers at CatLovers 🐱</h2>
        <p class="text-muted mt-2">
            Join a team that’s passionate about animal care, adoption, and creating
            loving homes for cats.
        </p>
    </div>

    <!-- About Working Here -->
    <div class="row mb-5">
        <div class="col-md-6">
            <h4>Why Work With Us?</h4>
            <p class="text-muted">
                At CatLovers, we believe every cat deserves love, care, and respect.
                Our team works closely with adopters, veterinarians, and animal lovers
                to ensure the best experience for both cats and families.
            </p>
            <ul>
                <li>Friendly and supportive work environment</li>
                <li>Opportunity to work closely with animals</li>
                <li>Meaningful work that makes a real impact</li>
                <li>Growth and learning opportunities</li>
            </ul>
        </div>

        @* <div class="col-md-6">
            <img src="~/images/career-cats.jpg"
                 class="img-fluid rounded shadow"
                 alt="Careers at CatLovers" />
        </div> *@
    </div>

    <!-- Open Positions -->
    <div class="mb-5">
        <h4 class="mb-3">Current Openings</h4>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Cat Care Assistant</h5>
                        <p class="card-text text-muted">
                            Responsible for daily care, feeding, and ensuring the well-being
                            of cats in our facility.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Veterinary Assistant</h5>
                        <p class="card-text text-muted">
                            Assist veterinarians with routine checkups, vaccinations,
                            and basic medical care.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Cat Groomer</h5>
                        <p class="card-text text-muted">
                            Provide grooming services including bathing, brushing,
                            and nail trimming.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Adoption Coordinator</h5>
                        <p class="card-text text-muted">
                            Guide adopters through the adoption process and help match
                            cats with loving families.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Apply Section -->
    <div class="text-center p-4 bg-light rounded shadow-sm">
        <h5>How to Apply</h5>
        <p class="text-muted mb-2">
            If you’re passionate about animals and want to be part of our mission,
            we’d love to hear from you.
        </p>
        <p class="fw-bold">
            📧 Send your resume to:
            <span class="text-primary">careers@catlovers.com</span>
        </p>
    </div>
</div>


