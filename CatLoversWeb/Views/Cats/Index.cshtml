@model IEnumerable<CatLoversWeb.Models.Cat>

@{
    ViewData["Title"] = "Cats";
}

<h2 class="mb-4">🐾 Our Lovely Cats</h2>

<div class="row">
    @foreach (var cat in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">

                <img src="@cat.ImageUrl"
                     class="card-img-top"
                     alt="@cat.Name"
                     style="height:450px; object-fit:cover;" />

                <div class="card-body">
                    <h5 class="card-title">@cat.Name</h5>

                    <p class="text-muted mb-1">
                        @cat.Breed • @cat.Age years
                    </p>

                    <!-- PRICE -->
                    @if (cat.DiscountPrice.HasValue)
                    {
                        <p class="mb-1">
                            <span class="text-muted text-decoration-line-through">
                                @cat.Price.ToString("C",
                                         System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                            </span>

                            <span class="fw-bold text-success ms-2">
                                @cat.DiscountPrice.Value.ToString("C",
                                         System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                            </span>

                            <span class="badge bg-warning text-dark ms-2">
                                Sale
                            </span>
                        </p>
                    }
                    else
                    {
                        <p class="fw-bold text-success mb-1">
                            @cat.Price.ToString("C",
                                     System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                        </p>
                    }

                    <!-- AVAILABILITY -->
                    @* @if (cat.IsAvailable)
                    {
                        <span class="badge bg-success">In Stock</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Reserved</span>
                    } *@
                </div> 

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        @if (cat.IsAvailable)
                        {
                            <span class="badge bg-success">In Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Reserved</span>
                        }
                    </div>

                    <a asp-controller="Cats"
                       asp-action="Details"
                       asp-route-id="@cat.Id"
                       class="btn btn-outline-primary btn-sm">
                        View Details
                    </a>
                </div>


            </div>
        </div>
    }
</div>
