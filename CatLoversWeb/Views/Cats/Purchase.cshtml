@model CatLoversWeb.Models.Cat

@{
    ViewData["Title"] = "Purchase Cat";
}

<div class="container mt-5 text-center">
    <h2 class="mb-3">🐾 Purchase Confirmation</h2>

    <img src="@Model.ImageUrl"
         class="img-fluid rounded mb-3"
         style="max-height:300px;"
         alt="@Model.Name" />

    <h4>@Model.Name</h4>
    <p class="text-muted">@Model.Breed • @Model.Age years</p>

    <h3 class="text-success">
        @(Model.DiscountPrice ?? Model.Price)
        .ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
    </h3>

    <p class="mt-3">
        Are you sure you want to proceed with this purchase?
    </p>

    <a class="btn btn-success btn-lg me-2">
        ✅ Confirm Purchase
    </a>

    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
        Cancel
    </a>
</div>

